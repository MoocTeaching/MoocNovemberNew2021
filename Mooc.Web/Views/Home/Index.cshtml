
@{
    ViewBag.Title = "Index";
}

<h2>index</h2>

<body>
    <div class="container">
        <header>
            <h1>Login and Registeration Form <span> with HTML5 and CSS3</span></h1>
            <nav class="codrops-demos">
                <span>点击<strong>"Join Us"</strong> 查看表单切换效果</span>
                <a href="index.html" class="current-demo">Demo</a>
            </nav>
        </header>
        <section>
            <div id="container_demo">
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <form action="/Home/Index" method="post" autocomplete="on">
                            <h1>Log in</h1>
                            <p>
                                <label for="username" class="uname" data-icon="u">Your email or username</label>
                                <input id="UserName" name="UserName" required="required" type="text" placeholder="myusername or mymail@mail.com" />
                            </p>
                            <p>
                                <label for="password" class="youpasswd" data-icon="p">Your password</label>
                                <input id="PassWord" name="PassWord" required="required" type="password" placeholder="eg. 8digits" />
                            </p>
                            <p class="keeplogin">
                                <input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                                <label for="loginkeeping">Keep me logged in</label>
                            </p>
                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>
                            <p>
                                @TempData["ErrorMessage"]
                            </p>
                            <p class="change_link">
                                Not a member yet?
                                <a href="#toregister" class="to_register">Join Us</a>
                            </p>
                        </form>
                    </div>
                </div>

            </div>
        </section>

    </div>
</body>